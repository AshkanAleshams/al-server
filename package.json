    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "dotenv-cli": "^7.4.2",
