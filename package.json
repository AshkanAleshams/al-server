{
  "name": "alradio",
  "version": "0.1.0",
  "description": "AL Radio, the community driven, AL powered broadcast!",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npm run start:server && npm run start:client",
    "start:client": "next start",
    "lint": "next lint",
    "setup-audio": "mkdir -p ./audio && rm -rf ./audio/*",
    "start:server:local": "npm run setup-audio && node --expose-gc --env-file=.env src/index.js",
    "start:server": "npm run setup-audio && node --expose-gc --optimize_for_size --max_old_space_size=460 src/index.js",
    "mongo:local": "mkdir -p db && mongod --dbpath db --port 28017",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\""
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "next": "14.2.5",
    "axios": "^1.7.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "https-proxy-agent": "^7.0.5",
    "mongodb": "^6.8.0",
    "openai": "^4.55.5",
    "throttle": "^1.0.3"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "dotenv-cli": "^7.4.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  }
}
